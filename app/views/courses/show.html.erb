<br />
<div class="box-box col-10 offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <br />
  <%= image_tag @course.photo.to_s, class: 'img-fluid' %>

  <br />
  <br />

  <div class="row">
    <div class="col-sm-4 col-12 text-center">
      <% if current_user && current_user == @course.user %>
        <%= link_to 'Administer', instructor_course_path(@course), class: 'btn btn-danger btn-large' %>
      <% end %> 

      <br />

      <span class="badge badge-success">
        <%= number_to_currency @course.cost %>
      </span>
      <br />

      <% if current_user && current_user.enrolled_in?(@course) %>
        <h3 class="badge badge-info">You are enrolled!</h3>
      <% else %>
        <%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn-primary', method: :post %>
      <% end %>
    </div>

    <br />

    <div class="col-sm-8 col-12">
      <%= @course.description %>
    </div>
  </div>

  <br />

  <div class="col-12">
    <% @course.sections.each do |section| %>
    <br />
      <div class="section">
        <h3>
          <%= section.title %>
        </h3>
        <br />
          <div class="row">
          <% section.lessons.each do |lesson| %>
              <div class="col-12 col-sm-6">
              <div class="lesson text-center">
                <br />
                <%= link_to lesson_path(lesson) do %>
                  <b><%= lesson.title %></b>
                  <br />
                  <%= lesson.subtitle %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <br class="clr">
      </div>
    <% end %>
  </div>

</div>